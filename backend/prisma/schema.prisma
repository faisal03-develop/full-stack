generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
 model User{
  id String @id @default(cuid())
  firstname String
  lastname String
  username String @unique
  email String @unique
  password String
  role String
  createdAt DateTime @default(now())
 }

model TreatmentPlan{
  id String @id @default(cuid())
  name String
  description String
  price Int
  doc doctor @relation(fields: [doc_id], references: [doc_id])
  doc_id String
  createdAt DateTime @default(now())
  appointment Appointment[]
}


model Appointment{
  a_id String @id @default(cuid())
  doctor doctor @relation(fields: [doc_id], references: [doc_id])
  doc_id String
  patient patient @relation(fields: [pid], references: [pid])
  pid String
  tplan TreatmentPlan @relation(fields: [t_id], references: [t_id])
  t_id String
  date DateTime
  status String
}