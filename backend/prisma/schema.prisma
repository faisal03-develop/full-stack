generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String     @id @default(cuid())
  name String?
  username   String @unique
  password   String
  email String  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

