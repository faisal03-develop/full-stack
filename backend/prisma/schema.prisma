generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String     @id @default(cuid())
  name String?
  username   String @unique
  password   String
  email String  @unique
  role String @default("patient")
  createdAt DateTime @default(now())
  patients Treatment[]
}

model Treatment{
  id String @id @default(cuid())
  userId    String
  user User @relation(fields: [userId], references: [id])
  name String?
  createdAt DateTime @default(now())
}


