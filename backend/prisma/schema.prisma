generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model patient {
  pid    String     @id @default(cuid())
  name String
  username   String @unique
  password   String
  email String  @unique
  createdAt DateTime @default(now())
  age Int
  bloodgroup String
  address String
  gender String
  phone Int
}

model doctor {
  doc_id    String     @id @default(cuid())
  name String
  username   String @unique
  password   String
  email String  @unique
  createdAt DateTime @default(now())
  qualifications String
  experience Int

}